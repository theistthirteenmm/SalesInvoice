<?xml version="1.0" encoding="UTF-8"?>
<jasperReport xmlns="http://jasperreports.sourceforge.net/jasperreports"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://jasperreports.sourceforge.net/jasperreports http://jasperreports.sourceforge.net/xsd/jasperreport.xsd"
              name="invoice_template" pageWidth="595" pageHeight="842" columnWidth="555" leftMargin="20" rightMargin="20" topMargin="20" bottomMargin="20">

    <!-- Parameters -->
    <parameter name="invoiceTitle" class="java.lang.String"/>
    <parameter name="invoiceDate" class="java.lang.String"/>
    <parameter name="totalAmount" class="java.math.BigDecimal"/>
    <parameter name="logo" class="java.io.InputStream"/>

    <!-- Fields from datasource -->
    <field name="itemName" class="java.lang.String"/>
    <field name="quantity" class="java.lang.Integer"/>
    <field name="unitPrice" class="java.math.BigDecimal"/>
    <field name="totalPrice" class="java.math.BigDecimal"/>

    <!-- Title Band -->
    <title>
        <band height="150">
            <!-- Logo -->
            <image hAlign="Center" vAlign="Middle" onErrorType="Blank">
                <reportElement x="455" y="10" width="100" height="80"/>
                <imageExpression><![CDATA[$P{logo}]]></imageExpression>
            </image>

            <!-- Invoice Title -->
            <textField>
                <reportElement x="50" y="30" width="400" height="40"/>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="24" isBold="true" pdfEncoding="Identity-H"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{invoiceTitle}]]></textFieldExpression>
            </textField>

            <!-- Invoice Date Label -->
            <staticText>
                <reportElement x="320" y="100" width="80" height="30"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" isBold="true" pdfEncoding="Identity-H"/>
                </textElement>
                <text><![CDATA[تاریخ فاکتور:]]></text>
            </staticText>

            <!-- Invoice Date Value -->
            <textField>
                <reportElement x="210" y="100" width="100" height="30"/>
                <textElement textAlignment="Right" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" pdfEncoding="Identity-H"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{invoiceDate}]]></textFieldExpression>
            </textField>
        </band>
    </title>

    <!-- Column Header -->
    <columnHeader>
        <band height="40">
            <staticText>
                <reportElement x="305" y="10" width="250" height="30" mode="Opaque" backcolor="#E8F4F8"/>
                <box>
                    <pen lineWidth="1.0" lineColor="#3498DB"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" isBold="true" pdfEncoding="Identity-H"/>
                </textElement>
                <text><![CDATA[شرح کالا / خدمات]]></text>
            </staticText>

            <staticText>
                <reportElement x="220" y="10" width="85" height="30" mode="Opaque" backcolor="#E8F4F8"/>
                <box>
                    <pen lineWidth="1.0" lineColor="#3498DB"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" isBold="true" pdfEncoding="Identity-H"/>
                </textElement>
                <text><![CDATA[تعداد]]></text>
            </staticText>

            <staticText>
                <reportElement x="110" y="10" width="110" height="30" mode="Opaque" backcolor="#E8F4F8"/>
                <box>
                    <pen lineWidth="1.0" lineColor="#3498DB"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" isBold="true" pdfEncoding="Identity-H"/>
                </textElement>
                <text><![CDATA[قیمت واحد (ریال)]]></text>
            </staticText>

            <staticText>
                <reportElement x="0" y="10" width="110" height="30" mode="Opaque" backcolor="#E8F4F8"/>
                <box>
                    <pen lineWidth="1.0" lineColor="#3498DB"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="12" isBold="true" pdfEncoding="Identity-H"/>
                </textElement>
                <text><![CDATA[مبلغ کل (ریال)]]></text>
            </staticText>
        </band>
    </columnHeader>

    <!-- Detail Band -->
    <detail>
        <band height="30">
            <textField isStretchWithOverflow="true">
                <reportElement x="305" y="0" width="250" height="30"/>
                <box>
                    <pen lineWidth="0.5" lineColor="#BDC3C7"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="10" pdfEncoding="Identity-H"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{itemName}]]></textFieldExpression>
            </textField>

            <textField>
                <reportElement x="220" y="0" width="85" height="30"/>
                <box>
                    <pen lineWidth="0.5" lineColor="#BDC3C7"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="10" pdfEncoding="Identity-H"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{quantity}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0">
                <reportElement x="110" y="0" width="110" height="30"/>
                <box>
                    <pen lineWidth="0.5" lineColor="#BDC3C7"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="10" pdfEncoding="Identity-H"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{unitPrice}]]></textFieldExpression>
            </textField>

            <textField pattern="#,##0">
                <reportElement x="0" y="0" width="110" height="30"/>
                <box>
                    <pen lineWidth="0.5" lineColor="#BDC3C7"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="10" pdfEncoding="Identity-H"/>
                </textElement>
                <textFieldExpression><![CDATA[$F{totalPrice}]]></textFieldExpression>
            </textField>
        </band>
    </detail>

    <!-- Summary Band -->
    <summary>
        <band height="80">
            <staticText>
                <reportElement x="110" y="30" width="110" height="40" mode="Opaque" backcolor="#3498DB"/>
                <box>
                    <pen lineWidth="1.5" lineColor="#2980B9"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="16" isBold="true" pdfEncoding="Identity-H"/>
                    <paragraph lineSpacing="Single"/>
                </textElement>
                <text><![CDATA[جمع کل:]]></text>
            </staticText>

            <textField pattern="#,##0">
                <reportElement x="0" y="30" width="110" height="40" mode="Opaque" backcolor="#3498DB"/>
                <box>
                    <pen lineWidth="1.5" lineColor="#2980B9"/>
                </box>
                <textElement textAlignment="Center" verticalAlignment="Middle">
                    <font fontName="DejaVu Sans" size="16" isBold="true" pdfEncoding="Identity-H"/>
                </textElement>
                <textFieldExpression><![CDATA[$P{totalAmount} + " ریال"]]></textFieldExpression>
            </textField>
        </band>
    </summary>
</jasperReport>